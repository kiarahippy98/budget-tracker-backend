<h1>Your Categories</h1>
<%= link_to "New Category", new_category_path %>

<ul>
  <% @categories.each do |c| %>
    <li>
      <%= c.name %> |
      <%= link_to "Edit", edit_category_path(c) %> |
      <%= link_to "Delete", category_path(c), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
