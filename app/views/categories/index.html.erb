<h1>Your Categories</h1>
<%= link_to "New Category", new_category_path %>

<ul>
  <% @categories.each do |c| %>
    <li>
      <%= c.name %> |
      <%= link_to "Edit", edit_category_path(c) %> |
      <%= link_to "Delete", category_path(c), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<h1>Your Transactions</h1>

<%= link_to "New Transaction", new_transaction_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= number_to_currency(t.amount) %></td>
        <td><%= t.category.name %></td>
        <td>
          <%= link_to "Edit", edit_transaction_path(t) %> |
          <%= link_to "Delete", transaction_path(t),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

