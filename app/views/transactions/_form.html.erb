<%= form_with(model: transaction) do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :amount %>
    <%= f.number_field :amount, step: 0.01 %>
  </div>

  <div>
    <%= f.label :category_id, "Category" %>
    <%= f.collection_select :category_id,
          current_user.categories,
          :id,
          :name %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
